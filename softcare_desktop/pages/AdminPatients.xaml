<Page x:Class="softcare_desktop.pages.AdminPatients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="AdminPatients"
      Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#FF306FD0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#5e7fb2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cb2e3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="320" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0">Patient Records</TextBlock>
        <Label Content="Patient ID"
               HorizontalAlignment="Left"
               Margin="25,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}" />
        <DataGrid x:Name="dtgPatients"
                  Grid.Row="2"
                  FontFamily="{StaticResource ReadexProLight}"
                  FontSize="14"
                  SelectionChanged="dtgPatients_SelectionChanged"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=patient_id}"
                                    Header="patient_id" />
                <DataGridTextColumn Binding="{Binding Path=doctor_id}"
                                    Header="doctor_id" />
                <DataGridTextColumn Binding="{Binding Path=last_name}"
                                    Header="last_name" />
                <DataGridTextColumn Binding="{Binding Path=first_name}"
                                    Header="first_name" />
                <DataGridTextColumn Binding="{Binding Path=age}"
                                    Header="age" />
                <DataGridTextColumn Binding="{Binding Path=sex}"
                                    Header="sex" />
                <DataGridTextColumn Binding="{Binding Path=middle_name}"
                                    Header="middle_name" />
                <DataGridTextColumn Binding="{Binding Path=admission_date}"
                                    Header="admission_date" />
                <DataGridTextColumn Binding="{Binding Path=admission_time}"
                                    Header="admission_time" />
                <DataGridTextColumn Binding="{Binding Path=status}"
                                    Header="status" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Last Name"
               HorizontalAlignment="Left"
               Margin="25,106,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="First Name"
               HorizontalAlignment="Left"
               Margin="25,146,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Middle Name"
               HorizontalAlignment="Left"
               Margin="25,184,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Age"
               HorizontalAlignment="Left"
               Margin="25,222,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Sex"
               HorizontalAlignment="Left"
               Margin="25,260,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Admission Date"
               HorizontalAlignment="Left"
               Margin="496,30,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Admission Status"
               HorizontalAlignment="Left"
               Margin="496,106,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Doctor ID"
               HorizontalAlignment="Left"
               Margin="25,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxPatientID"
                 HorizontalAlignment="Left"
                 Margin="164,32,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource TextBoxes}"
                 IsReadOnly="True" />
        <TextBox x:Name="tbxLastName"
                 HorizontalAlignment="Left"
                 Margin="164,112,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxFirstName"
                 HorizontalAlignment="Left"
                 Margin="164,150,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxMiddleName"
                 HorizontalAlignment="Left"
                 Margin="164,188,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxAge"
                 HorizontalAlignment="Left"
                 Margin="164,226,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="90"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <ComboBox x:Name="cmbSex"
                  HorizontalAlignment="Left"
                  Margin="164,262,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="120"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Male" />
            <ComboBoxItem Content="Female" />
        </ComboBox>
        <DatePicker x:Name="dtpAdmissionDate"
                    HorizontalAlignment="Left"
                    Margin="736,31,0,0"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    Style="{StaticResource DatePickers}" />
        <ComboBox x:Name="cmbAdmissionStatus"
                  HorizontalAlignment="Left"
                  Margin="736,110,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="314"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Admitted" />
            <ComboBoxItem Content="Discharged" />
            <ComboBoxItem Content="Discharged Against Medical Advice" />
            <ComboBoxItem Content="Referred to Other Hospital" />
        </ComboBox>
        <TextBox x:Name="tbxDoctorID"
                 HorizontalAlignment="Left"
                 Margin="164,72,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnAdd"
                Style="{StaticResource Buttons}"
                Content="Add"
                Margin="0,262,333,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnAdd_Click" />
        <Button x:Name="btnUpdate"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,262,233,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnUpdate_Click" />
        <Button x:Name="btnDelete"
                Style="{StaticResource Buttons}"
                Content="Delete"
                Margin="0,262,133,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnDelete_Click" />
        <Button x:Name="btnClear"
                Style="{StaticResource Buttons}"
                Content="Clear"
                Margin="0,262,33,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnClear_Click" />
        <Label Content="Admission Time (24-hour)"
               HorizontalAlignment="Left"
               Margin="496,68,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxAdmissionHour"
                 HorizontalAlignment="Left"
                 Margin="736,72,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="58"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxAdmissionMinute"
                 HorizontalAlignment="Left"
                 Margin="820,72,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="58"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Label Content=":"
               HorizontalAlignment="Left"
               Margin="800,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}"
               Width="14" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="349,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="349,68,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="469,106,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="469,146,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="259,222,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="289,260,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="883,68,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="884,30,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="1055,106,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
    </Grid>
</Page>
