<Page x:Class="softcare_desktop.pages.AdminPatients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="AdminPatients">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#FF306FD0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#5e7fb2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cb2e3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="320" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0">Patient Records</TextBlock>
        <Label Content="Patient ID"
               HorizontalAlignment="Left"
               Margin="25,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}" />
        <DataGrid x:Name="dtgPatients"
                  Grid.Row="2"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  FontFamily="{StaticResource ReadexProLight}"
                  FontSize="14" />
        <Label Content="Last Name"
               HorizontalAlignment="Left"
               Margin="25,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="First Name"
               HorizontalAlignment="Left"
               Margin="25,104,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Middle Name"
               HorizontalAlignment="Left"
               Margin="25,142,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Age"
               HorizontalAlignment="Left"
               Margin="25,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Sex"
               HorizontalAlignment="Left"
               Margin="25,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Admission Time"
               HorizontalAlignment="Left"
               Margin="545,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Admission Status"
               HorizontalAlignment="Left"
               Margin="545,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Doctor ID"
               HorizontalAlignment="Left"
               Margin="545,104,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxPatientID"
                 HorizontalAlignment="Left"
                 Margin="164,32,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource TextBoxes}" />
        <TextBox x:Name="tbxLastName"
                 HorizontalAlignment="Left"
                 Margin="164,70,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxFirstName"
                 HorizontalAlignment="Left"
                 Margin="164,108,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxMiddleName"
                 HorizontalAlignment="Left"
                 Margin="164,146,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxAge"
                 HorizontalAlignment="Left"
                 Margin="164,184,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="90"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <ComboBox x:Name="cmbSex"
                  HorizontalAlignment="Left"
                  Margin="164,220,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="120"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="M" />
            <ComboBoxItem Content="F" />
            <ComboBoxItem Content="Other" />
        </ComboBox>
        <DatePicker x:Name="dtpAdmissionTime"
                    HorizontalAlignment="Left"
                    Margin="720,29,0,0"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    Style="{StaticResource DatePickers}" />
        <ComboBox x:Name="cmbAdmissionStatus"
                    HorizontalAlignment="Left"
                  Margin="720,68,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="324"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Admitted" />
            <ComboBoxItem Content="Discharged" />
            <ComboBoxItem Content="Discharged Against Medical Advice" />
            <ComboBoxItem Content="Referred to Other Hospital" />
        </ComboBox>
        <TextBox x:Name="tbxDoctorID"
                 HorizontalAlignment="Left"
                 Margin="720,108,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnAdd"
                Style="{StaticResource Buttons}"
                Content="Add"
                HorizontalAlignment="Left"
                Margin="650,262,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="87"
                Grid.Row="1" />
        <Button x:Name="btnUpdate"
                Style="{StaticResource Buttons}"
                Content="Update"
                HorizontalAlignment="Left"
                Margin="757,262,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="87"
                Grid.Row="1" />
        <Button x:Name="btnDelete"
                Style="{StaticResource Buttons}"
                Content="Delete"
                HorizontalAlignment="Left"
                Margin="865,262,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="87"
                Grid.Row="1" />
        <Button x:Name="btnClear"
                Style="{StaticResource Buttons}"
                Content="Clear"
                HorizontalAlignment="Left"
                Margin="970,262,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="87"
                Grid.Row="1" />
    </Grid>
</Page>
