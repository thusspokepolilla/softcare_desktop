<Page x:Class="softcare_desktop.pages.AdminBillings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="AdminBillings"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#FF306FD0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#5e7fb2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cb2e3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="320" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0"
                   Text="Billings" />
        <Label Content="Billing ID"
               HorizontalAlignment="Left"
               Margin="25,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}" />
        <DataGrid x:Name="dtgBillings"
                  Grid.Row="2"
                  FontFamily="{StaticResource ReadexProLight}"
                  FontSize="14"
                  SelectionChanged="dtgBillings_SelectionChanged"
                  SelectionMode="Single"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=billing_id}"
                                    Header="billing_id" />
                <DataGridTextColumn Binding="{Binding Path=patient_record_id}"
                                    Header="patient_record_id" />
                <DataGridTextColumn Binding="{Binding Path=appointment_id}"
                                    Header="appointment_id" />
                <DataGridTextColumn Binding="{Binding Path=mode_of_payment}"
                                    Header="mode_of_payment" />
                <DataGridTextColumn Binding="{Binding Path=total_amount}"
                                    Header="total_amount" />
                <DataGridTextColumn Binding="{Binding Path=is_paid}"
                                    Header="is_paid" />
                <DataGridTextColumn Binding="{Binding Path=balance}"
                                    Header="balance" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Patient Record ID"
               HorizontalAlignment="Left"
               Margin="25,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Total Amount"
               HorizontalAlignment="Left"
               Margin="25,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Mode of Payment"
               HorizontalAlignment="Left"
               Margin="25,142,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Is Paid"
               HorizontalAlignment="Left"
               Margin="25,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Balance"
               HorizontalAlignment="Left"
               Margin="25,256,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxBillingID"
                 HorizontalAlignment="Left"
                 Margin="210,32,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="150"
                 Style="{StaticResource TextBoxes}"
                 IsReadOnly="True" />
        <TextBox x:Name="tbxPatientID"
                 HorizontalAlignment="Left"
                 Margin="210,70,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxTotalAmount"
                 HorizontalAlignment="Left"
                 Margin="210,183,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="150"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <ComboBox x:Name="cmbModeOfPayment"
                  HorizontalAlignment="Left"
                  Margin="210,0,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Center"
                  Width="150"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Cash" />
            <ComboBoxItem Content="Credit Card" />
        </ComboBox>
        <ComboBox x:Name="cmbIsPaid"
                  HorizontalAlignment="Left"
                  Margin="210,220,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="150"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Yes" />
            <ComboBoxItem Content="No" />
        </ComboBox>
        <TextBox x:Name="tbxBalance"
                 HorizontalAlignment="Left"
                 Margin="210,260,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnAdd"
                Style="{StaticResource Buttons}"
                Content="Add"
                Margin="0,262,333,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnAdd_Click" />
        <Button x:Name="btnUpdate"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,262,233,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnUpdate_Click" />
        <Button x:Name="btnDelete"
                Style="{StaticResource Buttons}"
                Content="Delete"
                Margin="0,262,133,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnDelete_Click" />
        <Button x:Name="btnClear"
                Style="{StaticResource Buttons}"
                Content="Clear"
                Margin="0,262,33,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnClear_Click" />
        <Label Content="Appointment ID"
               HorizontalAlignment="Left"
               Margin="25,104,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxAppointmentID"
                 HorizontalAlignment="Left"
                 Margin="210,108,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="365,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="365,0,0,0"
               Grid.Row="1"
               VerticalAlignment="Center"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="365,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="365,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="395,256,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
    </Grid>
</Page>
