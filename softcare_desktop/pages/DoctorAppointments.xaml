<Page x:Class="softcare_desktop.pages.DoctorAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="DoctorAppointments">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#4fe0b0" />
        </Style>
        <Style x:Key="Numbers"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="45" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
        <Style x:Key="DashboardStats"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProMedium}" />
            <Setter Property="FontSize"
                    Value="21" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#19c28a" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cffb3" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="67" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0"
                   Height="44"
                   Width="379">Appointments</TextBlock>
        <TextBox x:Name="tbxSearch"
                 Margin="25,0,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Center"
                 Height="22"
                 AcceptsReturn="True"
                 FontFamily="{StaticResource ReadexProLight}"
                 HorizontalAlignment="Left"
                 Width="307" />
        <Button x:Name="btnSearch"
                Style="{StaticResource Buttons}"
                Content="Search"
                Grid.Row="1"
                Margin="357,0,0,0"
                HorizontalAlignment="Left"
                Width="81"
                Height="22"
                VerticalAlignment="Center" />
        <DataGrid x:Name="dtgAppointments"
                  Margin="25,23,25,29"
                  Grid.Row="2"
                  d:ItemsSource="{d:SampleData ItemCount=5}" />
    </Grid>
</Page>
