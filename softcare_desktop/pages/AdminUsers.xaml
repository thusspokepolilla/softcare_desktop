<Page x:Class="softcare_desktop.pages.AdminUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="AdminUsers"
      Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#FF306FD0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15
                    " />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#5e7fb2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cb2e3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="320" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0"
                   Text="User Management" />
        <Label Content="User ID"
               HorizontalAlignment="Left"
               Margin="25,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}" />
        <DataGrid x:Name="dtgUsers"
                  Grid.Row="2"
                  FontFamily="{StaticResource ReadexProLight}"
                  FontSize="14"
                  SelectionChanged="dtgUsers_SelectionChanged"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=user_id}"
                                    Header="user_id" />
                <DataGridTextColumn Binding="{Binding Path=username}"
                                    Header="username" />
                <DataGridTextColumn Binding="{Binding Path=role}"
                                    Header="role" />
                <DataGridTextColumn Binding="{Binding Path=last_name}"
                                    Header="last_name" />
                <DataGridTextColumn Binding="{Binding Path=first_name}"
                                    Header="first_name" />
                <DataGridTextColumn Binding="{Binding Path=middle_name}"
                                    Header="middle_name" />
            </DataGrid.Columns>

        </DataGrid>
        <Label Content="Last Name"
               HorizontalAlignment="Left"
               Margin="25,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="First Name"
               HorizontalAlignment="Left"
               Margin="25,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Middle Name"
               HorizontalAlignment="Left"
               Margin="25,256,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Password"
               HorizontalAlignment="Left"
               Margin="25,104,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Role"
               HorizontalAlignment="Left"
               Margin="25,142,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Username"
               HorizontalAlignment="Left"
               Margin="25,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxUserID"
                 HorizontalAlignment="Left"
                 Margin="226,32,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource TextBoxes}"
                 IsReadOnly="True"
                 Text="{Binding SelectedItem.userid, ElementName=dtgUsers}" />
        <TextBox x:Name="tbxLastName"
                 HorizontalAlignment="Left"
                 Margin="226,184,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxFirstName"
                 HorizontalAlignment="Left"
                 Margin="226,222,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxMiddleName"
                 HorizontalAlignment="Left"
                 Margin="226,260,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <ComboBox x:Name="cmbRole"
                  HorizontalAlignment="Left"
                  Margin="226,144,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="180"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="Doctor" />
        </ComboBox>
        <TextBox x:Name="tbxUsername"
                 HorizontalAlignment="Left"
                 Margin="226,70,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnAdd"
                Style="{StaticResource Buttons}"
                Content="Add"
                Margin="0,262,333,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnAdd_Click" />
        <Button x:Name="btnUpdate"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,262,233,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnUpdate_Click" />
        <Button x:Name="btnDelete"
                Style="{StaticResource Buttons}"
                Content="Delete"
                Margin="0,262,133,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnDelete_Click" />
        <Button x:Name="btnClear"
                Style="{StaticResource Buttons}"
                Content="Clear"
                Margin="0,262,33,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnClear_Click" />
        <PasswordBox x:Name="tbxPassword"
                     HorizontalAlignment="Left"
                     Margin="226,108,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="300"
                     FontSize="18" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="411,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="531,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="531,105,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="411,0,0,0"
               Grid.Row="1"
               VerticalAlignment="Center"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="531,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
        <Label Content="*"
               HorizontalAlignment="Left"
               Margin="531,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="46"
               Foreground="Red" />
    </Grid>
</Page>
