<Page x:Class="softcare_desktop.pages.AdminAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="AdminDoctors">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#FF306FD0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#5e7fb2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cb2e3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="274.242" />
            <RowDefinition Height="45.758" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0">Doctor Appointments</TextBlock>
        <Label Content="Appointment ID"
               HorizontalAlignment="Left"
               Margin="25,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}" />
        <DataGrid x:Name="dtgAppointments"
                  Grid.Row="3"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  FontFamily="{StaticResource ReadexProLight}"
                  FontSize="14" />
        <Label Content="Last Name"
               HorizontalAlignment="Left"
               Margin="25,104,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="First Name"
               HorizontalAlignment="Left"
               Margin="25,142,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Middle Name"
               HorizontalAlignment="Left"
               Margin="25,180,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Appointment Date"
               HorizontalAlignment="Left"
               Margin="25,218,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Appointment Status"
               HorizontalAlignment="Left"
               Margin="545,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Doctor ID"
               HorizontalAlignment="Left"
               Margin="25,66,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxAppointmentID"
                 HorizontalAlignment="Left"
                 Margin="226,32,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource TextBoxes}" />
        <TextBox x:Name="tbxLastName"
                 HorizontalAlignment="Left"
                 Margin="226,108,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxFirstName"
                 HorizontalAlignment="Left"
                 Margin="226,146,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxMiddleName"
                 HorizontalAlignment="Left"
                 Margin="226,184,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <DatePicker x:Name="dtpAppointmentDate"
                    HorizontalAlignment="Left"
                    Margin="226,219,0,0"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    Style="{StaticResource DatePickers}" />
        <ComboBox x:Name="cmbAppointmentStatus"
                  HorizontalAlignment="Left"
                  Margin="844,68,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="180"
                  Style="{StaticResource ComboBoxes}">
            <ComboBoxItem Content="Pending" />
            <ComboBoxItem Content="Admitted" />
            <ComboBoxItem Content="Canceled" />
        </ComboBox>
        <TextBox x:Name="tbxDoctorID"
                 HorizontalAlignment="Left"
                 Margin="226,70,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="180"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnAdd"
                Style="{StaticResource Buttons}"
                Content="Add"
                Margin="0,262,334,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                Width="88" />
        <Button x:Name="btnUpdate"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,262,233,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                Width="87" />
        <Button x:Name="btnDelete"
                Style="{StaticResource Buttons}"
                Content="Delete"
                Margin="0,262,133,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Grid.RowSpan="2" />
        <Button x:Name="btnClear"
                Style="{StaticResource Buttons}"
                Content="Clear"
                Margin="0,262,33,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Grid.RowSpan="2" />
        <Label Content="Appointment Time (24-hour)"
               HorizontalAlignment="Left"
               Margin="545,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBox x:Name="tbxAdmissionHour"
                 HorizontalAlignment="Left"
                 Margin="844,34,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="58"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <TextBox x:Name="tbxAdmissionMinute"
                 HorizontalAlignment="Left"
                 Margin="928,34,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="58"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Label Content=":"
               HorizontalAlignment="Left"
               Margin="908,28,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}"
               Width="14" />
    </Grid>
</Page>
