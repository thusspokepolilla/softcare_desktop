<Page x:Class="softcare_desktop.pages.DoctorDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="DoctorDashboard">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#4fe0b0" />
        </Style>
        <Style x:Key="Numbers"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="45" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
        <Style x:Key="DashboardStats"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProMedium}" />
            <Setter Property="FontSize"
                    Value="21" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="250" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Margin="25,0,0,18">Welcome, Doctor</TextBlock>
        <Rectangle Fill="#19c28a"
                   Height="200"
                   Width="300"
                   Grid.Row="1"
                   Margin="25,25,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
        <Image Source="/assets/admin_patients.png"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="100"
               Width="100"
               Margin="53,53,0,0"
               RenderTransformOrigin="0.547,0.702" />
        <TextBlock x:Name="PatientCount"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="160,75,0,0"
                   Style="{StaticResource Numbers}">0</TextBlock>
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource DashboardStats}"
                   Margin="64,158,0,0">
        Patient Records
        </TextBlock>
        <Rectangle Fill="#19c28a"
                   Height="200"
                   Width="300"
                   Grid.Row="1"
                   Margin="360,25,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
        <Image Source="/assets/admin_appointments.png"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="100"
               Width="100"
               Margin="390,58,0,0"
               RenderTransformOrigin="0.547,0.702" />
        <TextBlock x:Name="DoctorAppointments"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="495,75,0,0"
                   Style="{StaticResource Numbers}">0</TextBlock>
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource DashboardStats}"
                   Margin="398,158,0,0">
            Pending Appointments
        </TextBlock>
        <Rectangle Fill="#19c28a"
                   Height="200"
                   Width="300"
                   Grid.Row="1"
                   Margin="695,25,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" />
        <Image Source="/assets/admin_billing.png"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="100"
               Width="100"
               Margin="717,58,0,0"
               RenderTransformOrigin="0.547,0.702" />
        <TextBlock x:Name="Billings"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="824,80,0,0"
                   Style="{StaticResource Numbers}">0</TextBlock>
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource DashboardStats}"
                   Margin="728,158,0,0">
        Unpaid Billings
        </TextBlock>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource PageHeader}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="25,13,0,0"
                       FontSize="30">
                Pending Appointments
            </TextBlock>
            <DataGrid x:Name="dtgPendingAppointments"
                      Margin="25,70,25,0" />
            <TextBlock Style="{StaticResource PageHeader}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="25,13,0,0"
                       Grid.Column="1"
                       FontSize="30">
                Unpaid Billings
            </TextBlock>
            <DataGrid x:Name="dtgUnpaidBillings"
                      Margin="25,70,25,0" 
                      Grid.Column="1"/>
        </Grid>
    </Grid>
</Page>
