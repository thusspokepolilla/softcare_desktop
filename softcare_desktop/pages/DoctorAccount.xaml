<Page x:Class="softcare_desktop.pages.DoctorAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:softcare_desktop.pages"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1090"
      Title="DoctorAccount">
    <Page.Resources>
        <Style x:Key="PageHeader"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="35" />
            <Setter Property="Foreground"
                    Value="#4fe0b0" />
        </Style>
        <Style x:Key="Labels"
               TargetType="Label">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="TextBoxes"
               TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="Buttons"
               TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProBold}" />
            <Setter Property="FontSize"
                    Value="15
" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#19c28a" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1cffb3" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ComboBoxes"
               TargetType="ComboBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProRegular}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
        <Style x:Key="DatePickers"
               TargetType="DatePicker">
            <Setter Property="FontFamily"
                    Value="{StaticResource ReadexProLight}" />
            <Setter Property="FontSize"
                    Value="18" />
        </Style>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0"
                   Text="User Management" />
        <Label Content="Current Username"
               HorizontalAlignment="Left"
               Margin="25,56,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource Labels}"
               Width="176" />
        <Label Content="New Password"
               HorizontalAlignment="Left"
               Margin="25,236,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="Confirm Password"
               HorizontalAlignment="Left"
               Margin="25,274,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <Label Content="New Username"
               HorizontalAlignment="Left"
               Margin="25,94,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               Style="{StaticResource ResourceKey=Labels}" />
        <TextBlock x:Name="tbkUsername"
               HorizontalAlignment="Left"
                   Margin="226,61,0,0"
                   Grid.Row="1"
               VerticalAlignment="Top"
               Width="300"
               Style="{StaticResource PageHeader}"
               Text="Username"
               FontFamily="{StaticResource ReadexProLight}" 
               FontSize="18"
                   Foreground="Black"/>
        <TextBox x:Name="tbxUsername"
                 HorizontalAlignment="Left"
                 Margin="225,98,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="300"
                 Style="{StaticResource ResourceKey=TextBoxes}" />
        <Button x:Name="btnUpdateUsername"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,138,564,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="87"
                Click="btnUpdateUsername_Click" />
        <Button x:Name="btnUpdatePassword"
                Style="{StaticResource Buttons}"
                Content="Update"
                Margin="0,322,565,0"
                VerticalAlignment="Top"
                Height="30"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Width="86"
                Click="btnUpdatePassword_Click" />
        <PasswordBox x:Name="tbxNewPassword"
                     HorizontalAlignment="Left"
                     Margin="226,239,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="300"
                     FontSize="18" />
        <PasswordBox x:Name="tbxConfirmPassword"
                     HorizontalAlignment="Left"
                     Margin="225,277,0,0"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     Width="300"
                     FontSize="18" />
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="25,10,0,0"
                   Text="Change Username"
                   Grid.Row="1"
                   FontSize="25" />
        <TextBlock Style="{StaticResource PageHeader}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="25,194,0,0"
                   Text="Change Password"
                   Grid.Row="1"
                   FontSize="25" />
    </Grid>
</Page>
