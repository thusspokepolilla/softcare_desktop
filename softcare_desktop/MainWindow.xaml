<Window x:Class="softcare_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:softcare_desktop"
        mc:Ignorable="d"
        Title="Login"
        Width="1280"
        Height="720"
        MinWidth="1280"
        MinHeight="720"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="500" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="assets/background.png" />
        </Grid.Background>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55*" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Source="/logo_transparent.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Height="178"
                       Width="612" />
                <TextBlock FontFamily="{StaticResource ReadexProSemiBold}"
                           FontSize="50"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Height="80"
                           Margin="0,21,0,0"
                           Grid.Row="1"
                           Width="386"
                           TextAlignment="Center">
                    <TextBlock.Text>Welcome back!</TextBlock.Text>
                </TextBlock>
                <TextBlock FontFamily="{StaticResource ReadexProRegular}"
                           FontSize="30"
                           TextAlignment="Center"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock.Text>Enter your username and password.</TextBlock.Text>
                </TextBlock>

            </Grid>
            <TextBlock FontFamily="{StaticResource ReadexProMedium}"
                       FontSize="35"
                       TextAlignment="Left"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="59,83,0,0">
                <TextBlock.Text>Username</TextBlock.Text>
            </TextBlock>
            <TextBox x:Name="tbxUser"
                     FontFamily="{StaticResource ReadexProLight}"
                     FontSize="30"
                     TextAlignment="Left"
                     Grid.Column="1"
                     Margin="59,132,0,0"
                     HorizontalAlignment="Left"
                     Width="458"
                     Height="51"
                     VerticalAlignment="Top" />
            <TextBlock FontFamily="{StaticResource ReadexProMedium}"
                       FontSize="35"
                       TextAlignment="Left"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       Margin="59,223,0,224">
                <TextBlock.Text>Password</TextBlock.Text>
            </TextBlock>
            <PasswordBox x:Name="tbxPass"
                         FontFamily="{StaticResource ReadexProLight}"
                         FontSize="30"
                         Grid.Column="1"
                         VerticalAlignment="Top"
                         Margin="59,276,0,0"
                         Width="458"
                         HorizontalAlignment="Left"
                         Height="51" />
            <Button x:Name="btnLogin"
                    FontFamily="{StaticResource ReadexProRegular}"
                    FontSize="30"
                    HorizontalAlignment="Left"
                    Grid.Column="1"
                    Content="Login"
                    Margin="331,370,0,0"
                    Width="186"
                    VerticalAlignment="Top"
                    Click="btnLogin_Click"
                    Height="56" />
        </Grid>

        <Rectangle Opacity="0.5"
                   Fill="White"
                   Panel.ZIndex="-1"
                   Margin="0,0,0,0"
                   Grid.Row="1" />
    </Grid>
</Window>
